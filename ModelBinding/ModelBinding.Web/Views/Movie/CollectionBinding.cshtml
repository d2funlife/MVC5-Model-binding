                    <input type="text" class="form-control" name="[1].Title" value="Мстители: Эра Альтрона" placeholder="Title">
                </div>
            </div>
            <div class="form-group">
                <label for="Director" class="col-sm-3 control-label">Director</label>
                <div class="col-sm-5">
                    <input type="text" class=" form-control" name="[1].Director" value="Джосс Уидон" placeholder=" director">
                </div>
            </div>
            <div class="form-group">
                <label for="Rating" class="col-sm-3 control-label">Rating</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="[1].Rating" value="8.254" placeholder="Rating">
                </div>
            </div>
            <div class="form-group">
                <label for="Year" class="col-sm-3 control-label">Year</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="[1].Year" value="2015" placeholder="Year">
