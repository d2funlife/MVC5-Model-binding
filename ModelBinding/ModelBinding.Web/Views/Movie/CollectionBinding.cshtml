            </div>
            <div class="form-group">
                <label for="Director" class="col-sm-3 control-label">Director</label>
                <div class="col-sm-5">
                    <input type="text" class=" form-control" name="[2].Director" value="Джей Джей Абрамс" placeholder=" director">
                </div>
            </div>
            <div class="form-group">
                <label for="Rating" class="col-sm-3 control-label">Rating</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="[2].Rating" value="0" placeholder="Rating">
                </div>
            </div>
            <div class="form-group">
                <label for="Year" class="col-sm-3 control-label">Year</label>
                <div class="col-sm-5">
                    <input type="text" class="form-control" name="[2].Year" value="2015" placeholder="Year">
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-5">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        }
    </div>
</div>