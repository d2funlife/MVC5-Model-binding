@using ModelBinding.Web.Helper
<!DOCTYPE html>
<html>
<head>
    <link rel="icon" type="image/png" href="/Content/images/logo16x16.png" />
    <!--[if IE]>
    <link rel="shortcut icon" href="/Content/images/logo16x16.png" type="image/vnd.microsoft.icon" />
    <![endif]-->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="Model binding"/>
    <meta name="author" content="d2funlife"/>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/pagecss")
</head>
<body class="page-body  page-fade">
    <div class="page-container">
        <div class="sidebar-menu">
            <div class="sidebar-menu-inner">
                <header class="logo-env">
                    <!-- logo -->
                    <div class="logo">
                        <a href="/">
                            <img src="/Content/images/logo@2x.png" width="120" alt="" />
                        </a>
                    </div>
                    <!-- logo collapse icon -->
                    <div class="sidebar-collapse">
                        <a href="#" class="sidebar-collapse-icon">
                            <!-- add class "with-animation" if you want sidebar to have animation during expanding/collapsing transition -->
                            <i class="entypo-menu"></i>
                        </a>
                    </div>
                    <!-- open/close menu icon (do not remove if you want to enable menu on mobile devices) -->
                    <div class="sidebar-mobile-menu visible-xs">
                        <a href="#" class="with-animation">
                            <!-- add class "with-animation" to support animation -->
                            <i class="entypo-menu"></i>
                        </a>
                    </div>
                </header>
                <ul id="main-menu" class="main-menu">
                    <!-- add class "multiple-expanded" to allow multiple submenus to open -->
                    <!-- class "auto-inherit-active-class" will automatically add "active" class for parent elements who are marked already with class "active" -->
                    <li @Html.IsLinkActive("BaseBinding")>
                        <a href="@Url.Action("BaseBinding", "Movie")">
                            <i class="entypo-dot-3"></i>
                            <span class="title">Base binding</span>
                        </a>
                    </li>
                    <li @Html.IsLinkActive("LimitBinding")>
                        <a href="@Url.Action("LimitBinding", "Movie")">
                            <i class="entypo-dot-3"></i>
                            <span class="title">Limit binding</span>
                        </a>
                    </li>
                    <li @Html.IsLinkActive("AltBinding")>
                        <a href="@Url.Action("AltBinding", "Movie")">
                            <i class="entypo-dot-3"></i>
                            <span class="title">Alternative binding</span>
                        </a>
                    </li>
                    <li @Html.IsLinkActive("CustomBinding")>
                        <a href="@Url.Action("CustomBinding", "Movie")">
                            <i class="entypo-dot-3"></i>
                            <span class="title">Custom binding</span>
                        </a>
                    </li>
                    <li @Html.IsLinkActive("CollectionBinding")>
                        <a href="@Url.Action("CollectionBinding", "Movie")">
                            <i class="entypo-dot-3"></i>
                            <span class="title">Collection binding</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-content">
            <div class="row">
                <div class="col-md-6 col-sm-8 clearfix">
                    @RenderBody()
                </div>
            </div>
        </div>

    </div>
    @Scripts.Render("~/bundles/pagejs")
    @RenderSection("scripts", required: false)
</body>
</html>
